<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="pconley.vamp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo">
        <activity
            android:name=".library.view.LibraryActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".player.view.PlayerActivity"
            android:label="@string/activity_player_name"
            android:launchMode="singleTop"
            android:parentActivityName=".library.view.LibraryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".library.view.LibraryActivity"/>
        </activity>

        <receiver android:name=".player.AudioNoisyReceiver">
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY"/>
            </intent-filter>
        </receiver>

        <service android:name=".player.PlayerService"/>
        <service android:name=".scanner.ScannerService"/>

        <activity
            android:name=".preferences.view.SettingsActivity"
            android:label="@string/activity_settings_name">
        </activity>
    </application>

</manifest>
