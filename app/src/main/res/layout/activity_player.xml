<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="pconley.vamp.player.PlayerActivity">

    <TextView
        android:id="@+id/player_view_uri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/player_row_controls"
        android:layout_below="@+id/player_view_uri">

        <TextView
            android:id="@+id/player_view_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"/>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/player_row_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player_row_position"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <ImageButton
            android:id="@+id/player_button_prev"
            android:layout_width="@dimen/button_large"
            android:layout_height="@dimen/button_large"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/player_button_playpause"
            android:layout_toStartOf="@+id/player_button_playpause"
            android:background="@android:drawable/ic_media_previous"
            android:contentDescription="@string/player_button_previous"
            android:onClick="onClickPrev"
            />

        <ImageButton
            android:id="@+id/player_button_playpause"
            android:layout_width="@dimen/button_xlarge"
            android:layout_height="@dimen/button_xlarge"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/generic_padding"
            android:background="@android:drawable/ic_media_play"
            android:clickable="true"
            android:contentDescription="@string/player_button_play_pause"
            android:onClick="onClickPlayPause"/>

        <ImageButton
            android:id="@+id/player_button_next"
            android:layout_width="@dimen/button_large"
            android:layout_height="@dimen/button_large"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/player_button_playpause"
            android:layout_toRightOf="@+id/player_button_playpause"
            android:background="@android:drawable/ic_media_next"
            android:contentDescription="@string/player_button_next"
            android:onClick="onClickNext"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player_row_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/player_view_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/player_blank_time"
            android:textSize="@dimen/text_size_large"/>

        <SeekBar
            android:id="@+id/player_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/player_view_position"
            android:layout_toLeftOf="@+id/player_view_duration"
            android:layout_toRightOf="@+id/player_view_position"
            android:layout_toStartOf="@+id/player_view_duration"
            android:indeterminate="false"
            android:progress="0"/>

        <TextView
            android:id="@+id/player_view_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:text="@string/player_blank_time"
            android:textSize="@dimen/text_size_large"/>
    </RelativeLayout>

</RelativeLayout>