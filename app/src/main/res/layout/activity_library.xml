<RelativeLayout
    android:id="@+id/library"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pconley.vamp.library.view.LibraryActivity">

    <ImageButton
        android:id="@+id/library_button_play_all"
        android:layout_width="@dimen/button_large"
        android:layout_height="@dimen/button_large"
        android:onClick="onClickPlayContents"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/play_all"
        android:background="@android:drawable/ic_media_play"/>

    <FrameLayout
        android:id="@+id/library_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/library_button_play_all"
        android:layout_above="@+id/library_tag_history"
        />

    <pconley.vamp.library.view.TagHistoryView
        android:id="@+id/library_tag_history"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_size_large_with_padding"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>